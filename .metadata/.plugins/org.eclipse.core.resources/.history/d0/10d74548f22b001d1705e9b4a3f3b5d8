package oo.heranca.desafio;

public class Carro {
	int velocidadeAtual;
	int aceleracao;
	
	void acelerar() {
		velocidadeAtual += aceleracao;
	}
	
	void frear() {
		if(velocidadeAtual >= 5) {			
			velocidadeAtual -= aceleracao;
		}else {
			velocidadeAtual = 0;
		}
	}
	
	public String toString() {
		return Integer.toString(velocidadeAtual);
	}
}
