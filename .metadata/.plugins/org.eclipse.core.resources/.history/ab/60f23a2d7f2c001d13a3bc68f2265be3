package oo.heranca.desafio;

public class Carro {
	final int VELOCIDADE_MAXIMA;
	int velocidadeAtual;
	int aceleracao;
	
	Carro(int velocidadeMaxima){
		
	}
	
	void acelerar() {
		velocidadeAtual += 5;
	}
	
	void frear() {
		if(velocidadeAtual >= 5) {			
			velocidadeAtual -= 5;
		}else {
			velocidadeAtual = 0;
		}
	}
	
	public String toString() {
		return Integer.toString(velocidadeAtual);
	}
}
